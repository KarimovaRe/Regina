#include <iostream>

using namespace std;

int main()
{ 
    cout<<"\n1 задание"<<endl;
    float a,r1,r2;
    cout<<"Ввсти значение угла в градусах ( 0 < α < 360) а=";
    cin>>a;
    r1= (3.14 * a ) / 180;
    cout<<"Значение этого же угла в радианах ="<< r1<<endl;
   
    cout<<"\n2 задание"<<endl; 
    cout<<"Ввсти значение угла в радианах (0 < α < 2•π) а=";
    cin>>a;
    r2=(180 * a) / 3.14;
    cout<<"Значение этого же угла в градусах ="<<r2<<endl;
    
     cout<<"\n3 задание"<<endl; 
     float x,y,z,q;
     cout<<"Введите количество конфет в кг:";
     cin>>x;
      cout<<"Введите стоимость этого количества (кг) в рублях:";
     cin>>a;
     z= a / x;
    cout<<"Стоимость этих конфет за 1кг:"<<z<<endl;
     cout<<"Введите любое количество этих же конфет в кг:";
     cin>>y;
     q=y * z;
      cout<<"Стоимость этих конфет за "<<y<<"кг:"<<q<<endl;
     
     cout<<"\n4 задание"<<endl;  
     float v1,v2,s,t,so,sd;
      cout<<"Введите скорость 1 автомобиля в км/ч:";
      cin>>v1;
       cout<<"Введите скорость 2 автомобиля в км/ч:";
      cin>>v2;
      cout<<"Введите расстояние между ними в км:";
      cin>>s;
      cout<<"Введите время (ч), чтобы определить расстояние между автомобилями за этот промежуток:";
      cin>>t;
      so= t * (v1 + v2);
      sd= s + so;
      cout<<"Расстояние между ними через "<<t<<"ч ="<<sd<<endl;
      
      cout<<"\n5 задание"<<endl;  
      float b,rez;
      cout<<"Введите ненулевой коэффициент A=";
      cin>>a;
       cout<<"Введите коэффициент B=";
      cin>>b;
      rez= (-1 * b) / a;
      cout<<"Решение линейного уравнения ="<<rez<<endl;
      
       cout<<"\n6 задание"<<endl;  
       float a1,a2,b1,b2,c1,c2,x1,y1,delta;
        cout<<"Введите  коэффициент A1=";
      cin>>a1;
       cout<<"Введите  коэффициент A2=";
      cin>>a2;
       cout<<"Введите коэффициент B1=";
      cin>>b1;
      cout<<"Введите коэффициент B2=";
      cin>>b2;
        cout<<"Введите  коэффициент C1=";
      cin>>c1;
     cout<<"Введите коэффициент C2=";
      cin>>c2;
      delta= a1 * b2 - b1 * a2;
      x1= (c1 * b2 - c2 * b1) / delta;
      y1= (a1 * c2 - a2 * c1 ) / delta;
      cout<<"Решение системы линейного уравнения x="<<x1<<" y="<<y1<<endl;
    return 0;
}
